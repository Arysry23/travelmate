<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/card_rounded_background"
    android:layout_marginBottom="12dp">

    <!-- Destination -->
    <TextView
        android:id="@+id/tvDestination"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Destination"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#333333"/>

    <!-- Description -->
    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Description"
        android:textSize="16sp"
        android:textColor="#555555"
        android:layout_marginTop="8dp"/>

    <!-- Coordinates -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp">

        <TextView
            android:id="@+id/tvLatitude"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Latitude: 0.0"
            android:textColor="#666666"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/tvLongitude"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Longitude: 0.0"
            android:textColor="#666666"
            android:textSize="14sp"/>
    </LinearLayout>

    <!-- Date -->
    <TextView
        android:id="@+id/tvDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date: 2024-01-01"
        android:textSize="14sp"
        android:textColor="#888888"
        android:layout_marginTop="8dp"/>

    <!-- Map Image -->
    <ImageView
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="12dp"
        android:scaleType="centerCrop"
        android:src="@drawable/card_rounded"
        android:contentDescription="Map of the trip destination"/>
</LinearLayout>